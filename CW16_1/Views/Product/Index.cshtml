@{
}

@model IEnumerable<Product>
<h1>محصولات</h1>
<p>
    <a class="btn btn-primary text-white" asp-controller="Product" asp-action="Add">ساخت محصول جدید</a>
</p>


<table class="table table-striped table-bordered">
    <thead>
        <tr class="bg-info text-white">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th> عملیات</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>

                    <a class="btn btn-info text-white" asp-route-Id="@item.Id" asp-controller="Product" asp-action="Edit">ویرایش</a>

                    <a class="btn btn-danger text-white" asp-route-Id="@item.Id" asp-controller="Product" asp-action="Delete">حذف</a>
                </td>
            </tr>
        }
    </tbody>

</table>

